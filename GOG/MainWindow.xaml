<Window x:Class="GameOfGoose.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfGoose"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="750"
        Width="900"
        ResizeMode="NoResize"
        Background="White">
    <DockPanel VerticalAlignment="Stretch"
               HorizontalAlignment="Stretch">
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Background="Black"
                    HorizontalAlignment="Stretch">
            <Label Content="Ganzenspel"
                   HorizontalAlignment="Left"
                   FontSize="32"
                   Foreground="White" />
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="User1"
                        HorizontalAlignment="Right" />
                <Button Content="User2"
                        HorizontalAlignment="Right" />
                <Button Content="User2"
                        HorizontalAlignment="Right" />
                <Button Content="User2"
                        HorizontalAlignment="Right" />
            </StackPanel>
        </StackPanel>
        <Grid HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            <Grid.Background>
                <ImageBrush ImageSource="/Images/Ganzenbord.png"
                            Stretch="Fill" />
            </Grid.Background>
            <Path Stroke="White"
                  Fill="Transparent"
                  Data="M 10,600 C 800,600 900,600 790,150 C 750,0 500,10 200,50  C -0,200 50,200 100,400 C 150,450 200,550 550,500" />
        </Grid>
    </DockPanel>
</Window>