<Window x:Name="EnterPlayers1"
        x:Class="GameOfGoose.EnterPlayers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfGoose"
        mc:Ignorable="d"
        Title="Enter Players"
        Height="346"
        Width="291"
        WindowStyle="None">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Label HorizontalAlignment="Stretch">Enter Number of Players 2-4:</Label>
            <TextBox x:Name="textBox"
                     Text="TextBox"
                     TextWrapping="Wrap"
                     Width="121" />
        </StackPanel>
        <StackPanel Orientation="Vertical"
                    Height="301">
            <StackPanel Orientation="Horizontal">
                <Label Content="Player1"></Label><TextBox x:Name="Player1"
                         Width="235"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Player2"></Label><TextBox x:Name="Player2"
                         Width="235"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Player3"></Label><TextBox x:Name="Player3"
                         Width="235"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Player4"></Label><TextBox x:Name="Player4"
                         Width="235"></TextBox>
            </StackPanel>
            <Button x:Name="button"
                    Margin="25"
                    Content="Start"
                    Height="154"
                    Width="225"
                    Click="button_Click" />
        </StackPanel>
    </DockPanel>
</Window>